<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@drawable/start"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="176dp"
        android:layout_height="134dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="9dp"
        android:onClick="onButtonEurope"
        android:src="@drawable/europe" />

    <ImageButton
        android:layout_width="171dp"
        android:layout_height="137dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="302dp"
        android:onClick="onButtonAsia"
        android:src="@drawable/asia_main"
        android:text="Button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="92dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="274dp"
        android:layout_marginTop="250dp"
        android:text="Европа"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="303dp"
        android:text="Азия"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp" />

    <ImageButton
        android:onClick="onMyButtonClick"
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="35dp"
        app:srcCompat="@drawable/ic_baseline_exit_to_app_24" />

    <TextView
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="105dp"
        android:text="Добро пожаловать в Trevolka!"
        android:textColor="@color/color_europe"
        android:textSize="25dp" />

    <TextView
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="1dp"
        android:text="Trevolka позиционирует себя как туристическая компания без посредников, вы напрямую получаете выгодную информацию"
        android:textColor="@color/color_europe"
        android:textSize="18dp" />

</RelativeLayout>